<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.gusman.uas.biodata">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Biodata"
        tools:ignore="AllowBackup,LockedOrientationActivity">
        <activity
            android:name=".ui.AboutActivity"
            android:label="@string/title_about"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.form.EditBioActivity"
            android:label="@string/title_edit_bio"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.form.AddBioActivity"
            android:label="@string/title_add_bio"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.SplashScreenActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Biodata.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Biodata.NoActionBar" />
    </application>

</manifest>